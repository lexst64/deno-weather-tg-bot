{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "moduleResolution": "force",
    "module": "esnext"
  },
  "fmt": {
    "files": {
      "include": ["src/"]
    },
    "options": {
      "useTabs": true,
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true
    }
  }
}